<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".filters">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.widget.Button
            android:id="@+id/all"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="150dp"
            android:background="#1C72DC"
            android:text="ALL"
            android:textColor="@color/white" />

        <android.widget.Button
            android:id="@+id/smartPhones"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"
            android:background="#1C72DC"
            android:text="Smart Phones"
            android:textColor="@color/white" />

        <android.widget.Button
            android:id="@+id/laptops"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"
            android:background="#1C72DC"
            android:text="Laptops"
            android:textColor="@color/white" />

        <android.widget.Button
            android:id="@+id/fragrances"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"
            android:background="#1C72DC"
            android:text="fragrances"
            android:textColor="@color/white" />

        <android.widget.Button
            android:id="@+id/groceries"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"
            android:background="#1C72DC"
            android:text="groceries"
            android:textColor="@color/white" />

        <android.widget.Button
            android:id="@+id/homeDecor"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"
            android:background="#1C72DC"
            android:text="Home-Decors"
            android:textColor="@color/white" />

        <android.widget.Button
            android:id="@+id/skinCare"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"
            android:background="#1C72DC"
            android:text="Skin Care"
            android:textColor="@color/white" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>